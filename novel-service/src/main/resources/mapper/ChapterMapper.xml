<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.persistence.mybatis.mapper.IChapterMapper">
    
    <resultMap id="ChapterResultMap" type="com.domain.Chapter">
        <id property="id" column="ID"/>
        <result property="chapterTitle" column="CHAPTER_TITLE"/>
        <result property="chapterContent" column="CONTENT"/>
        <result property="chapterOrder" column="CHAPTER_NUM"/>
        <result property="bookId" column="REF_ID"/>
        <result property="vipOnly" column="VIP_READ"/>
        <result property="createTime" column="ADD_TIME"/>
    </resultMap>
    
    <!-- 分页查询 -->
    <select id="selectPage" resultMap="ChapterResultMap">
        SELECT * FROM NOVEL_CHAPTER
        <where>
            <if test="bookId != null">
                AND REF_ID = #{bookId}
            </if>
        </where>
        ORDER BY CHAPTER_NUM ASC
        LIMIT #{offset}, #{limit}
    </select>
    
    <!-- 统计数量 -->
    <select id="selectCount" resultType="long">
        SELECT COUNT(*) FROM NOVEL_CHAPTER
        <where>
            <if test="bookId != null">
                AND REF_ID = #{bookId}
            </if>
        </where>
    </select>
    
    <!-- 根据书籍ID查询所有章节 -->
    <select id="selectByBookId" resultMap="ChapterResultMap">
        SELECT * FROM NOVEL_CHAPTER
        WHERE REF_ID = #{bookId}
        ORDER BY CHAPTER_NUM ASC
    </select>
    
</mapper>

